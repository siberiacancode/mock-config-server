{
  "name": "mock-config-server",
  "version": "2.1.0",
  "description": "Tool that easily and quickly imitates server operation, create full fake api in few steps",
  "author": {
    "name": "SIBERIA CAN CODE ðŸ§Š",
    "url": "https://github.com/siberiacancode"
  },
  "contributors": [
    {
      "name": "Dmitry Babin",
      "url": "https://github.com/debabin"
    },
    {
      "name": "Nursultan Zianurov",
      "url": "https://github.com/MiaInturi"
    },
    {
      "name": "Sergey Kryavkin",
      "url": "https://github.com/RiceWithMeat"
    }
  ],
  "license": "ISC",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "mock-config-server": "dist/bin/bin.js",
    "mcs": "dist/bin/bin.js"
  },
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=14"
  },
  "scripts": {
    "prepare": "husky install",
    "build": "shx rm -rf dist && tsc -p tsconfig.production.json && tsc-alias -p tsconfig.production.json && shx cp -R src/static dist/src/static",
    "start": "yarn build && node ./dist/bin/bin.js",
    "dev": "nodemon --watch src --watch bin --watch mock-server.config.js --watch mock-server.config.ts -e js,ts,ejs --exec \"yarn start\"",
    "test": "jest",
    "type": "tsc --noEmit",
    "lint": "eslint . --ext ts --no-error-on-unmatched-pattern",
    "format": "prettier --write {src,bin}/**/*.ts",
    "pretty": "yarn type && yarn format && yarn lint --fix"
  },
  "lint-staged": {
    "*.js": "yarn format",
    "*.ts": "yarn pretty"
  },
  "dependencies": {
    "@types/body-parser": "^1.19.2",
    "@types/express": "^4.17.17",
    "@types/flat": "^5.0.2",
    "@types/yargs": "^17.0.24",
    "ansi-colors": "^4.1.3",
    "body-parser": "^1.20.0",
    "ejs": "^3.1.8",
    "esbuild": "^0.17.8",
    "express": "^4.18.1",
    "flat": "^5.0.2",
    "graphql": "^16.6.0",
    "please-upgrade-node": "^3.2.0",
    "shx": "^0.3.4",
    "yargs": "^17.7.1"
  },
  "devDependencies": {
    "@types/jest": "^29.4.0",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.54.1",
    "@typescript-eslint/parser": "^5.55.0",
    "eslint": "^8.35.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^8.7.0",
    "eslint-import-resolver-typescript": "^3.4.1",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.1",
    "jest": "^29.4.2",
    "lint-staged": "^13.1.1",
    "nodemon": "^2.0.19",
    "prettier": "^2.8.3",
    "supertest": "^6.3.3",
    "ts-jest": "^29.0.3",
    "tsc-alias": "^1.8.5",
    "typescript": "^4.9.5"
  },
  "homepage": "https://github.com/siberiacancode/mock-config-server",
  "repository": {
    "type": "git",
    "url": "https://github.com/siberiacancode/mock-config-server.git"
  },
  "keywords": [
    "server",
    "fake",
    "REST",
    "rest",
    "API",
    "api",
    "mock",
    "mocking",
    "config",
    "data"
  ]
}
