{
  "compilerOptions": {
    "outDir": "dist",
    "declaration": true,
    "emitDeclarationOnly": true,
    "target": "esnext",
    "lib": ["dom", "es2021"],
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "isolatedModules": true,
    "resolveJsonModule": true,
    "sourceMap": false,
    "newLine": "lf",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": "./",
    "paths": {
      "@/server": ["./src/server"],
      "@/core/rest": ["./src/core/rest"],
      "@/core/graphql": ["./src/core/graphql"],
      "@/core/middlewares": ["./src/core/middlewares"],
      "@/utils/helpers": ["./src/utils/helpers"],
      "@/utils/types": ["./src/utils/types"],
      "@/utils/constants": ["./src/utils/constants"]
    }
  },
  "exclude": ["dist", "node_modules", "./**/*.test.ts", "jest.config.js"]
}
