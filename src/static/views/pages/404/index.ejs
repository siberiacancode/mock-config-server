<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />

  <title>404 - 🎉 Mock Config Server</title>

  <link rel="stylesheet" href="/assets/styles/index.css" />
  <link rel="stylesheet" href="/pages/404/index.css" />
  <link rel="stylesheet" href="/components/tab/index.css" />
  <script defer src="/components/tab/index.js"></script>

  <%- include(('../../assets/scheme/index')) -%>

  <% const api = {rest: "REST", graphql: "GraphQL"} %>
  <% const rootPath = (path) => `../../${path}` %>
</head>

<body class="tab-item-<%= graphqlRequestSuggestions.length ? api.graphql : api.rest %>">
  <%- include(rootPath('components/header/index')); -%>
  <div class="margin-container">
    <div class="hero">
      <div class="title">
        <img src="/assets/images/404.png" />
        404
      </div>
      <div class="description">
        Such request or page not found ☹️
        <a class="link" href="/">
          Return on main page
        </a>
      </div>
    </div>
  </div>
  <div class="margin-container">
    <div class="content">
      <div class="content-head">
        <%- include(rootPath('components/tab/tabItems'), {variants: api}) -%>
      </div>
      <%- include(rootPath('components/tab/tabContent'),
      {variant: api.rest, children: { path: 'pages/404/components/tabContent/index', params: {api: api.rest, requestSuggestions: restRequestSuggestions}}}) %>
      <%- include(rootPath('components/tab/tabContent'),  {variant: api.graphql, children: { path: 'pages/404/components/tabContent/index', params: {api: api.graphql, requestSuggestions: graphqlRequestSuggestions.map(item => ({method: item.operationType, path: item.operationName}))}}})  %>
    </div>
  </div>
  </div>
</body>

</html>